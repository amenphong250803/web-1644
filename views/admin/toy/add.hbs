<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="stylesheets/styleAddtoy.css" />
    <style>
      body { font-family: Arial, sans-serif; margin: 0; padding: 0;
      background-color: #f4f4f4; } main { max-width: 600px; margin: 50px auto;
      background-color: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 0
      10px rgba(0, 0, 0, 0.1); } form { display: flex; flex-direction: column; }
      h1 { font-size: 24px; margin-bottom: 20px; } label { margin-bottom: 8px; }
      input[type="text"], input[type="url"], select { width: 100%; padding:
      10px; margin-bottom: 15px; box-sizing: border-box; } input[type="submit"]
      { background-color: #4caf50; color: #fff; padding: 10px 15px; border:
      none; border-radius: 4px; cursor: pointer; font-size: 16px; }
      input[type="submit"]:hover { background-color: #45a049; }

    </style>
    <title>Website Title</title>
  </head>
  <body>
    <main>
      <form action="/toy/add" method="post">
        <h1>Add New Toy</h1>

        <label for="name">Toy Name:</label>
        <input type="text" name="name" id="name" required />

        <label for="image">Toy Image (URL):</label>
        <input type="url" name="image" id="image" required />

        <label for="price">Toy Price:</label>
        <input type="text" name="price" id="price" required />

        <label for="category">Toy Category:</label>
        <select name="category" id="category">
          {{#each categories}}
            <option value="{{_id}}">{{name}}</option>
          {{/each}}
        </select>

        <input type="submit" value="Add" />
      </form>
    </main>
  </body>
</html>