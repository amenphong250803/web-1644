<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <style>
      .container { margin-top: 20px; } .row-cols-4 { display: flex; flex-wrap:
      wrap; } .col { flex: 0 0 25%; max-width: 25%; padding: 10px; display:
      flex; flex-direction: column; justify-content: space-between; } .p-3 {
      padding: 1rem; height: 100%; } .border { border: 1px solid #ddd; }
      .bg-light { background-color: #f8f9fa; } img { max-width: 100%; height:
      auto; align-self: flex-start; /* Căn giữa ảnh theo chiều dọc */ } button {
      padding: 8px 15px; background-color: #4caf50; color: #fff; border: none;
      border-radius: 4px; cursor: pointer; margin-top: 10px; } button:hover {
      background-color: #45a049; }

    </style>
    <title>Website Title</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/toy">Home Admin</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/toy/add">Add</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/category">Category</a>
            </li>
          </ul>
          <form action="/toy/search" method="post">
            <input
              type="search"
              id=""
              name="keyword"
              required
              placeholder="Enter your search term"
            />
            <button type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>

    <main>
      <div class="container">
        <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
          {{#each toys}}
            <div class="col">
              <div class="p-3 border bg-light">
                <img src="{{image}}" alt="" width="220" height="220" />
                <p>Name: {{name}}</p>
                <p>Price: {{price}}</p>
                <p>Category: {{category.name}}</p>
                <a href="/toy/edit/{{_id}}"><button>Edit</button></a>
                <a
                  href="/toy/delete/{{_id}}"
                  onclick="return confirm('Are you sure to delete???');"
                ><button>Delete</button></a>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </main>

  </body>
</html>